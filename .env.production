# Configuration Docker Compose pour Production avec Vraies Données
# Gestion des indices financiers activés et performance

# Indices de marché activés (séparer par des virgules)
# Valeurs possibles: cac40, eurostoxx50, nasdaq100, sp500, dow30, ftse100, dax40, nikkei225
ENABLED_MARKET_INDICES=cac40,nasdaq100,sp500

# Configuration du Cache Financier
USE_FINANCIAL_CACHE=true
FINANCIAL_CACHE_TTL=300

# Configuration YFinance pour Performance
YFINANCE_MAX_WORKERS=10
YFINANCE_REQUEST_DELAY=0.1

# Configuration Base de Données
POSTGRES_USER=boursa_user
POSTGRES_PASSWORD=secure_production_password_2025
POSTGRES_DB=boursa_vision
DATABASE_URL=postgresql://boursa_user:secure_production_password_2025@postgres:5432/boursa_vision

# Configuration Redis Cache
REDIS_URL=redis://redis:6379/1
REDIS_PASSWORD=redis_secure_password_2025

# Configuration API
API_HOST=0.0.0.0
API_PORT=8000
API_MODE=production

# Configuration Cache System
CACHE_MODE=production
CACHE_DEBUG=false
CACHE_HOST=0.0.0.0
CACHE_PORT=8001

# Limitations de Performance (pour serveurs moins puissants)
# Ajustez ces valeurs selon la puissance de votre serveur
MAX_CONCURRENT_REQUESTS=50
BATCH_SIZE=20
MAX_MEMORY_USAGE_MB=1024
MAX_TIMELINES_IN_MEMORY=200

# Monitoring et Logs
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Sécurité
JWT_SECRET_KEY=super_secure_jwt_key_for_production_2025
CORS_ORIGINS=*

# Configuration Environnement
ENVIRONMENT=production
DEBUG=false
