# Boursa Vision - Configuration Production
# Variables spécifiques à la production

# ================================
# ENVIRONMENT
# ================================
ENVIRONMENT=production
DEBUG=false

# ================================
# DATABASE CONFIGURATION
# ================================
# Ces variables doivent être définies dans l'environnement de production
# POSTGRES_USER=production_user
# POSTGRES_PASSWORD=secure_production_password
# POSTGRES_DB=boursa_vision
# POSTGRES_HOST=production-db-host
# POSTGRES_PORT=5432

# ================================
# REDIS CONFIGURATION
# ================================
# REDIS_HOST=production-redis-host
# REDIS_PORT=6379
REDIS_DB=0

# ================================
# PRODUCTION SETTINGS
# ================================
USE_MOCK_REPOSITORIES=false
LOG_LEVEL=INFO

# ================================
# SECURITY (Production)
# ================================
# SECRET_KEY doit être défini dans l'environnement de production
# SECRET_KEY=your-very-secure-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ================================
# EXTERNAL SERVICES
# ================================
YFINANCE_RATE_LIMIT=5
MARKET_DATA_CACHE_TTL=600
