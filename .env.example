# ENABLED_INDICES=CAC40,NASDAQ100,EUROSTOXX50
# MAX_SYMBOLS_PER_INDEX=50
# CACHE_TTL_SECONDS=300
# ENABLE_REAL_DATA=true
# YFINANCE_TIMEOUT=10
