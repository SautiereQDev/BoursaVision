# Boursa Vision - Configuration Testing
# Variables spécifiques aux tests

# ================================
# ENVIRONMENT
# ================================
ENVIRONMENT=testing
DEBUG=false

# ================================
# DATABASE CONFIGURATION
# ================================
# Pour les tests, utiliser SQLite (défini dans la logique database_url de GlobalSettings)
# Les variables PostgreSQL sont définies mais non utilisées en testing
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=boursa_vision_test
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# ================================
# TESTING SETTINGS
# ================================
USE_MOCK_REPOSITORIES=true
LOG_LEVEL=WARNING

# ================================
# SECURITY (Testing)
# ================================
SECRET_KEY=test-secret-key-for-testing-only
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ================================
# EXTERNAL SERVICES
# ================================
YFINANCE_RATE_LIMIT=100
MARKET_DATA_CACHE_TTL=60
