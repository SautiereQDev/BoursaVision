# Boursa Vision - Configuration Development
# Variables spécifiques à l'environnement de développement

# ================================
# ENVIRONMENT
# ================================
ENVIRONMENT=development
DEBUG=false

# ================================
# DATABASE CONFIGURATION
# ================================
# Pour le développement, utilise SQLite en mémoire par défaut
# Décommentez les lignes ci-dessous pour utiliser PostgreSQL en développement
# POSTGRES_USER=boursa_user
# POSTGRES_PASSWORD=boursa_dev_password_2024
# POSTGRES_DB=boursa_vision_dev
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ================================
# DEVELOPMENT SETTINGS
# ================================
USE_MOCK_REPOSITORIES=false
LOG_LEVEL=DEBUG

# ================================
# SECURITY (Development)
# ================================
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ================================
# EXTERNAL SERVICES
# ================================
YFINANCE_RATE_LIMIT=10
MARKET_DATA_CACHE_TTL=300
