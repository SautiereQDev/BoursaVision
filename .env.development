# Configuration Docker Compose pour Développement avec Indices Limités
# Configuration optimisée pour serveurs moins puissants

# Indices de marché activés (configuration légère pour développement)
ENABLED_MARKET_INDICES=cac40,nasdaq100

# Configuration du Cache Financier
USE_FINANCIAL_CACHE=true
FINANCIAL_CACHE_TTL=600

# Configuration YFinance pour Performance Réduite
YFINANCE_MAX_WORKERS=5
YFINANCE_REQUEST_DELAY=0.2

# Configuration Base de Données
POSTGRES_USER=boursa_dev
POSTGRES_PASSWORD=development_password
POSTGRES_DB=boursa_vision_dev
DATABASE_URL=postgresql://boursa_dev:development_password@postgres:5432/boursa_vision_dev

# Configuration Redis Cache
REDIS_URL=redis://redis:6379/0

# Configuration API
API_HOST=0.0.0.0
API_PORT=8000
API_MODE=development

# Configuration Cache System
CACHE_MODE=development
CACHE_DEBUG=true
CACHE_HOST=0.0.0.0
CACHE_PORT=8001

# Limitations de Performance (serveur de développement)
MAX_CONCURRENT_REQUESTS=20
BATCH_SIZE=10
MAX_MEMORY_USAGE_MB=512
MAX_TIMELINES_IN_MEMORY=100

# Monitoring et Logs
LOG_LEVEL=DEBUG
ENABLE_METRICS=true

# Sécurité (développement uniquement)
JWT_SECRET_KEY=dev_jwt_key_not_for_production
CORS_ORIGINS=*

# Configuration Environnement
ENVIRONMENT=development
DEBUG=true
