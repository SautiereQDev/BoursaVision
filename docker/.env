# Boursa Vision - Environment Configuration Template
# Copy this file to .env and configure your settings

# ================================
# DATABASE CONFIGURATION
# ================================
POSTGRES_USER=boursa_user
POSTGRES_PASSWORD=boursa_dev_password_2024
POSTGRES_DB=boursa_vision
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Full Redis URL (constructed from above)
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ================================
# BACKEND API CONFIGURATION
# ================================
# Environment: development, staging, production
ENVIRONMENT=development

# Security
SECRET_KEY=boursa_dev_secret_key_for_development_only_2024_not_for_production_use
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# API Configuration
API_V1_STR=/api/v1
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_HOSTS=localhost,127.0.0.1,quentinsautiere.com
CORS_ORIGINS=http://localhost:3000,https://quentinsautiere.com

# ================================
# FRONTEND CONFIGURATION
# ================================
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws
VITE_ENVIRONMENT=development
VITE_APP_NAME="Boursa Vision"
VITE_APP_VERSION="1.0.0"

# ================================
# YFINANCE & MARKET DATA CONFIGURATION
# ================================
# Rate limiting for yfinance API
YFINANCE_RATE_LIMIT=10
YFINANCE_BATCH_SIZE=50
YFINANCE_TIMEOUT=30
YFINANCE_RETRY_ATTEMPTS=3

# Cache settings for market data
MARKET_DATA_CACHE_TTL=300
REAL_TIME_DATA_CACHE_TTL=60

# ================================
# CELERY BACKGROUND TASKS
# ================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_BEAT_SCHEDULE_FILENAME=celerybeat-schedule

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=contact@quentinsautiere.com

# ================================
# MONITORING & LOGGING
# ================================
# Sentry for error tracking (optional)
SENTRY_DSN=

# Log settings
LOG_ROTATION_MAX_BYTES=10485760
LOG_ROTATION_BACKUP_COUNT=5

# ================================
# SECURITY SETTINGS
# ================================
# Password hashing
BCRYPT_ROUNDS=12

# Session settings
SESSION_TIMEOUT_MINUTES=60

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ================================
# DEVELOPMENT ONLY SETTINGS
# ================================
# Debug settings (development only)
DEBUG=false
RELOAD=true

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/test_${POSTGRES_DB}

# ================================
# PRODUCTION ONLY SETTINGS
# ================================
# SSL/TLS Settings
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=

# Performance settings
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=300

# ================================
# OPTIONAL INTEGRATIONS
# ================================
# Telegram bot for notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=

# ================================
# ANALYTICS & TRACKING (Optional)
# ================================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ================================
# FEATURE FLAGS
# ================================
ENABLE_REAL_TIME_DATA=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_PORTFOLIO_SHARING=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_PAPER_TRADING=true

# ================================
# DEVELOPMENT TOOLS
# ================================
# API Documentation
ENABLE_DOCS=true
DOCS_URL=/docs
REDOC_URL=/redoc

# Development debugging
ENABLE_PROFILING=false
ENABLE_QUERY_DEBUGGING=false
